{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
            "args": [
                "--inspect",
                "--no-notify",
                "--respawn",
                "--transpileOnly",
                "${relativeFile}"
            ],
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node"
        },
        {
            "name": "Attach Program",
            "request": "attach",
            "type": "node",
            "port": 9000
        }
    ]
}
