{
    "compilerOptions": {
        "target": "ES6",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "declaration": true,
        "downlevelIteration": true,
        "module": "CommonJS",
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "rootDir": "src",
        "outDir": "lib"
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
